@using Demo.Core.Models;
@using Demo.Web.Helpers
@model List<Course>

<section class="breadcrumb-wrap  br-bg-4">
    <div class="overlay op-6 bg-black"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-8 offset-xl-2 col-lg-10 offset-lg-1 col-md-10 offset-md-1">
                <div class="breadcrumb-title">
                    <h2>Our Courses</h2>
                    <ul class="breadcrumb-menu">
                        <li><a href="index.html">Home </a></li>
                        <li>Courses</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="project-wrap pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title style1 text-center mb-40">
                    <span>
                        Top Courses
                    </span>
                    <h2>Our Online Courses</h2>
                </div>
            </div>
        </div>

        @if (Model?.Any() == true)
        {
            <div class="row justify-content-md-center">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="course-card style1">
                            <div class="course-img">
                                <a href="@FriendlyUrl.CourseDetail(item.FriendlyUrl)">
                                    <img src="@item.Thumb"
                                         alt="@item.Title">
                                </a>
                            </div>
                            <div class="course-info">
                                <h3><a href="@FriendlyUrl.CourseDetail(item.FriendlyUrl)">@item.Title</a></h3>
                                <p>@item.Description </p>
                            </div>
                            <div class="course-metainfo">
                                <div class="course-metainfo-right">
                                    <div class="price-tag">
                                        <p><span class="discount">@item.FakePrice</span><span>@item.Price.ToString("#,##0") VNĐ</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-warning" role="alert">
                        No courses found.
                    </div>
                </div>
            </div>
        }
        <div class="row mt-20">
            <div class="col-lg-12 text-center">
                <a href="#" class="btn v1">Load More <i class="ri-loader-line"></i> </a>
            </div>
        </div>
    </div>
</section>